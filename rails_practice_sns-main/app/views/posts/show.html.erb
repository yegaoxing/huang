<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">

      <div class="post-user-name">
        <img src="<%= "/user_images/#{@user.image_name}" %>">
        <%= link_to(@user.name, "/users/#{@user.id}") %>
      </div>
      <p>
        <%= @post.content %>
      </p>
      <div class="post-time">
        <%= @post.created_at %>
      </div>

      <%if Like.find_by(user_id: @current_user.id, post_id: @post.id)%>
        <%= button_to("/likes/#{@post.id}/destroy", {method: "post", class: "button"}) do %>
          <span class="fa fa-heart liked-btn"></span>
        <% end %>

      <% else %>
          <%= button_to("/likes/#{@post.id}/create", {method:"post", class: "button"}) do %>
            <span class="fa fa-heart unliked-btn"></span>
          <% end %> 
      <% end %>

      <%= @likes_count %>

      <% if @post.user_id == @current_user.id %>
        <div class="post-menus">
          <%= button_to("編集", "/posts/#{@post.id}/edit",{method: "get",class: "button"}) %>
          <%= button_to("削除", "/posts/#{@post.id}", {method: "delete", class: "button"}) %>
        </div>
      <% end %>
        
    </div>
  </div>
</div>